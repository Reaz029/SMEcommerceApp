<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add Product</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    @*@(Html.BeginForm("Create", "Product", new { enctype="multipart/form-data" }))*@
    <form method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter Product Name">
            </div>
            <div class="form-group">
                <label for="name">Product Name</label>
                <input asp-for="Code" type="text" class="form-control" id="code" placeholder="Enter Product Code">
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Description">
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input asp-for="Price" type="text" class="form-control" id="price" placeholder="0.00">
            </div>
            <div class="form-group">
                <label for="Manufacturer Date">Manufacturer Date</label>
                <input asp-for="ManufacturerDate" type="datetime" class="form-control" id="Manufacturer Date" placeholder="01 Jan">
            </div>


            <div class="form-group">

                <label for="name">category</label>

                @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, "---select---", new { @class = "form-control" })
                @*<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categorylist"></select>*@




            </div>

            <div class="form-group">

                <label asp-for="ImagePath" class="custom-control-label,"  ></label>
                <input type="file" class="form-control" asp-for="ImageFile" required  accept="images/*" />

               
            </div>
 






        </div>
<div class="card-footer">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>

    </form>




