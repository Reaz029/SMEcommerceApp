@model SMEcommerceApp.Models.ProductModels.ProductEdit
@{
    ViewData["Title"] = "Create";
    /// Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    Layout = "_AdminLayout";
}






<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add Product</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter Product Name">
            </div>
            <div class="form-group">
                <label for="name">Product Code</label>
                <input asp-for="Code" type="text" class="form-control" id="code" placeholder="Enter Product Code">
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Description">
            </div>
            <div class="form-group">
                <label class="control-label">Manufacture Date:</label>
                <input asp-for="ManufacturerDate" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label for="price">price</label>
                <input asp-for="Price" type="text" class="form-control" id="price" placeholder="0.00">
            </div>

            <div class="form-group">
                <label class="control-label">Category:</label>
                <select id="drpEmpList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))">
                    <option value="">--All--</option>
                </select>
            </div>








        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>




</div>




<!-- /.card-body -->
